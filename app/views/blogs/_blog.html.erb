<div class="hidden-xs">
  <div class="row">
    <div class="col-md-2">
      <h4> <%= blog.created_at.strftime("%A %B %d, %Y") %> </h4>
    </div>
    <div class="col-md-10">
      <h2>
       <%=link_to blog.title, blog_path(blog) %>
      </h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-2">
      <p>
        <%=raw blog.content %>
      </p>
    </div>
  </div>
</div>

<div class="visible-xs-block">
  <div class="row">
    <div class="col-xs-12">
      <div class="row">
        <div class="large-font">
          <%=link_to blog.title, blog_path(blog) %>
        </div>
      </div>
      <div class="row">
        <div class="medium-font">
          <%= blog.created_at.strftime("%A %B %d, %Y") %>
        </div>
      </div>
    </div>
  </div>
  <div class="row medium-top-margin">
    <div class="col-xs-12 medium-font">
      <p>
        <%=raw blog.content %> 
      </p>
    </div>
  </div>
</div>