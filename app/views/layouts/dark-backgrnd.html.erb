<!DOCTYPE html>
<html>
  <head>
    <title>Vanstaurant</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body class="black-background">

    <div class="row">

      <div class="medium-top-margin" style="position: fixed; top: 0px; z-index: 3;">
        <div style="position: fixed; right: 15%;">
          <%= link_to "Home", root_path,  class: "btn btn-lg btn-primary inline" %>
        </div>
      </div>

      <% if notice %> 
        <p class="notice"><%= notice %></p>
      <% end %>

      <% if alert %>
        <p class="alert"><%= alert %></p>
      <% end %>
      <div class="xlarge-top-margin">
        <%= yield %>
      </div>
      <%= render "pages/logout" %>
    </div>
  </body>
</html>