<!DOCTYPE html>
<html>
<head>
  <title>Vanstaurant</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if notice %> 
    <p class="notice"><%= notice %></p>
  <% end %>

  <% if alert %>
    <p class="alert"><%= alert %></p>
  <% end %>

  <div class="medium-margin">

    <% if current_user %>
      <div class="row underline medium-bottom-margin medium-bottom-padding">
        <div class="col-md-3 col-md-offset-1 text-center">
          <div class="admin-nav">
            <%= link_to "Admin Sign Out", destroy_user_session_path, method: :delete %>
          </div>
        </div>
      </div>
    <% end %>

    <%= yield %>

  </div>

</body>
</html>
