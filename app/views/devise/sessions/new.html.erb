<div class="shuteye-background">
  <div class="col-md-6 col-md-offset-3 text-center xlarge-top-margin ">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "large-top-margin large-top-padding xlarge-bottom-padding black-background"}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign in", class: "btn-primary medium-top-margin btn-lg" %>
      </div>
    <% end %>
  </div>
</div>


